{% extends 'base.html.twig' %}

{% block body %}
    <h1>Control</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ control.id }}</td>
            </tr>
            <tr>
                <th>Dominio</th>
                <td>{{ control.dominio }}</td>
            </tr>
            <tr>
                <th>Objetivo</th>
                <td>{{ control.objetivo }}</td>
            </tr>
            <tr>
                <th>Control</th>
                <td>{{ control.control }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('control_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('control_edit', { 'id': control.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
