{% extends 'layout.html.twig' %}

{% block body %}
<div class="container" style="margin-top:30px;">
  <div class="row well">
   <div class="col-md-6">
       <div class="page-header">
            <h2>Registro de Administrador de la empresa</h2> 
       </div>
        

    {{ form_start(form) }}
        <div class="form-group">
         <label>Nombre de Usuario</label>
         {{ form_widget(form.username, {'attr':{'class':'form-control'}}) }}

       </div>
       <div class="form-group">
         <label>Primer nombre</label>
         {{ form_widget(form.firstName, {'attr':{'class':'form-control'}}) }}
       </div>
       <div class="form-group">
         <label>Apellido</label>
         {{ form_widget(form.lastName, {'attr':{'class':'form-control'}}) }}

       </div>
       <div class="form-group">
         <label>Email</label>
         {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}

       </div>
        <div class="form-group">
         <label>Contrase√±a</label>
         {{ form_widget(form.password, {'attr':{'class':'form-control'}}) }}
       </div>
             

<div>
<label>Rol</label>

<select name="role" id="role"  >
<option selected value="ROLE_ADMIN">Administrador Empresa</option>
</select>
</div>

         <div class="form-group" style="display:none">
         {{ form_label(form.isActive)}}
         {{ form_widget(form.isActive, {'attr':{'class':'form-control'}}) }}

       </div>
          <div class="form-group" style="display:none">
         {{ form_label(form.createdAt)}}
         {{ form_widget(form.createdAt, {'attr':{'class':'form-control'}}) }}

       </div>
          <div class="form-group" style="display:none">
         {{ form_label(form.updateAt)}}
         {{ form_widget(form.updateAt, {'attr':{'class':'form-control'}}) }}

       </div>
        <button type="submit" class="btn" value="Create">Registrar</button>
    {{ form_end(form) }}


   </div>
  </div>
</div>
{% endblock %}
