{% extends 'base.html.twig' %}

{% block body %}
    <h1>Riesgos list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Disponibilidad</th>
                <th>Confidencialidad</th>
                <th>Integridad</th>
                <th>Valoractivo</th>
                <th>Degradacion</th>
                <th>Impacto</th>
                <th>Probocurrencia</th>
                <th>Estimacionriesgo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for riesgo in riesgos %}
            <tr>
                <td><a href="{{ path('riesgo_show', { 'id': riesgo.id }) }}">{{ riesgo.id }}</a></td>
                <td>{{ riesgo.disponibilidad }}</td>
                <td>{{ riesgo.confidencialidad }}</td>
                <td>{{ riesgo.integridad }}</td>
                <td>{{ riesgo.valorActivo }}</td>
                <td>{{ riesgo.degradacion }}</td>
                <td>{{ riesgo.impacto }}</td>
                <td>{{ riesgo.probOcurrencia }}</td>
                <td>{{ riesgo.estimacionRiesgo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('riesgo_show', { 'id': riesgo.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('riesgo_edit', { 'id': riesgo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('riesgo_new') }}">Create a new riesgo</a>
        </li>
    </ul>
{% endblock %}
