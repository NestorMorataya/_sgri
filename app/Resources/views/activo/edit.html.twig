        {{ form_widget(edit_form.personaResponsable) }}
    </div>
    <div class="form-group">
        <h5>Ubicación:</h5>
        {{ form_widget(edit_form.ubicacion) }}
    </div>
    <div class="form-group">
        <h5>Cantidad:</h5>
        {{ form_widget(edit_form.cantidad) }}
    </div>
        <input class="btn" type="submit" value="Editar" />
        <a class="btn" href="{{ path('activo_index') }}">Regresar</a>
    {{ form_end(edit_form) }}
