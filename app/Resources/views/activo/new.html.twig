{% extends 'base.html.twig' %} 


{% block body %}
<br>

<div class="container" style="margin-top:30px;">
  <div class="row well">
   <div class="col-md-6">
    <div class="col-xs-20">
    <div class="panel panel-success">
    <div class="panel-heading">NUEVA TAREA</div>
     <div class="panel-body">
    {{ form_start(form) }}
        <div class="form-group">
             {{ form_label(form.codigo)}}
             {{ form_widget(form.codigo, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
             {{ form_label(form.nombre)}}
             {{ form_widget(form.nombre, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
             {{ form_label(form.descripcion)}}
             {{ form_widget(form.descripcion, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
             {{ form_label(form.unidadResponsable)}}
             {{ form_widget(form.unidadResponsable, {'attr':{'class':'form-control'}}) }}
        </div>
          <div class="form-group">
             {{ form_label(form.personaResponsable)}}
             {{ form_widget(form.personaResponsable, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
             {{ form_label(form.ubicacion)}}
             {{ form_widget(form.ubicacion, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
             {{ form_label(form.cantidad)}}
             {{ form_widget(form.cantidad, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
          <label>Categoria</label>
          <select name='categoria'>
            <option>Seleccione una categoria</option>
          {% for cat in categoria %}
            <option value="{{cat.nombre}}">{{ cat.nombre }}</option>
          {% endfor %}
          </select>
        </div>
       <button type="submit" class="btn">Guardar</button>
       <a class="btn" href="{{ path('menu_activo') }}">Regresar</a>

    {{ form_end(form) }}
</div>
</div>
</div>
</div>
</div>
</div>

{% endblock %}
