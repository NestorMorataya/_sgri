{% extends 'base.html.twig' %}

{% block body %} 
<div class="container" style="margin-top:30px;">
  <div class="row well">
   <div class="col-md-6">
       <div class="page-header">
            <h2>NUEVO PLAN DE TRATAMIENTO</h2>
        </div>

 {{ form_start(form) }}
        <div class="form-group">
             {{ form_label(form.descripcion)}}
             {{ form_widget(form.descripcion, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
          <label>Categoria</label>
          <select name='categoria'>
            <option>Seleccione una categoria</option>
          {% for categoria in categoria_plan %}
            <option value="{{categoria.nombre}}">{{ categoria.nombre }}</option>
          {% endfor %}
          </select>
        </div>


    

<input type="submit" class="btn" value="Guardar"><a href="{{ path('plan_tratamiento_index') }}">Regresar</a>
{{ form_end(form) }}
    </div>
   </div>
</div>

{% endblock %}