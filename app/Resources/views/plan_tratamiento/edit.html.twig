{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="margin-top:100px; margin-bottom:150px">
	<div class="row well">
		<div class="col-md-6">

			<div class="col-xs-12">
				<div class="panel panel-success">
					<div class="panel-heading">EDITAR PLAN DE TRATAMIENTO</div> 
					<div class="panel-body">


						{{ form_start(edit_form) }}
						<div class="form-group">
							<h5>Descripción: </h5> 
							{{ form_widget(edit_form.descripcion) }}
						</div> 
						<br>

						<div class="form-group">
							<h5> Categoría de Plan de Tratamiento: </h5>
							{{ form_widget(edit_form.categoria_plan) }}
							{{ form_end(edit_form) }}
							<br>
							<br>
							<input class="btn" type="submit" value="Editar" />
							<a href="{{ path('plan_tratamiento_index') }}">Regresar</a>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
	{% endblock %}