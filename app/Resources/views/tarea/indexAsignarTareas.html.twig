{% extends 'base.html.twig' %}


{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('public/css/styleExtra.css')}}">
{% endblock %}

{% block body %}
<form  name="insertar" method="get" action="{{ path('proceso2')}}">
<div class="container" style="margin-top:100px; margin-bottom:150px">
<div class="row well">

<h2>Asignar tareas al plan: {{ proceso.plan.id }}</h2>

<input type="number" readonly="readonly" name="proceso" id="proceso" value="{{proceso.plan.id}}" style="display:none;">


<div class="col-xs-6">
<div class="panel panel-success">
<div class="panel-heading">TAREAS</div>
<div class="panel-body">
<center>
<h4>Ingrese el nombre de la tarea:</h4>
<input type="text" min="5" max="100" name="nombre" id="nombre" size="20">
<br>
<br>

<div class="form-group">
              <h4>Controles del plan: {{proceso.plan.id}}</h4>
              <select name= "contSeleccionado" required id= "contSeleccionado" class="textfield">
                <option selected="selected" value="default">--Seleccione un Control--</option>
                
                <option value="{{proceso.id}}">{{ proceso.control.control }}</option>
               
              </select>
            </div>



<br>
<input type="button" class="btn btn success" onclick="capturar()" value="Agregar Control">
</center>
<a class="btn" href="{{ path('proceso_index') }}">Regresar</a>
<hr>
<br><br>


<input type="number" readonly="readonly" name="contador" id="contador" style="display:none;">


<div class="box-body table-responsive">
<table class="table table-hover" width= "100%" >
<thead>
<tr>
<th style="width:10%" >Plan</th>
<th style="width:10%" >Tarea</th>
<th style="width:10%" >Control</th>
</tr>
</thead>
<tbody>
{% for i in 0..20 %}
<tr class="hover" style="display:none" id="fila{{i}}" name="fila{{i}}">
<td><input class="colorfondo" size="8" type="text" id="plan{{i}}" name="plan{{i}}" readonly="readonly"></td>
<td><input class="colorfondo" size="8" type="text" id="nom{{i}}" name="nom{{i}}" readonly="readonly"></td>
<td><input class="colorfondo" size="8" type="text" id="control{{i}}" name="control{{i}}" readonly="readonly"></td>
</tr>
{% endfor %}
</tbody>
</table>

</div>

<center><input class="btn" type="submit" name="Enviar" value="Guardar"></center>
</form>

</div>

</div>

<style>
.colorfondo{
background-color: #F2F2F2;
border:0;
}
</style>

</div>
</div>
</div>


{% endblock %}

{% block javascripts %}
<script src="{{ asset('public/js/tablaTareas.js')}}"></script>
<script type="text/javascript">
</script>


{% endblock %}

